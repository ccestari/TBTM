@model IEnumerable<TakeBackTheMusic.Models.Photos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoFilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoCaption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoFilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoCaption)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhotoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhotoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhotoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
